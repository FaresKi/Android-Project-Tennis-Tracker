<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.HomeActivity" android:background="#79DFEC">

    <ImageView
            android:src="@drawable/tennisball"
            android:layout_width="221dp"
            android:layout_height="173dp" android:id="@+id/imageView"
            android:contentDescription="@string/content"
            android:layout_marginBottom="23dp"
            android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tennis_n_tracker"
            android:fontFamily="@font/montserrat" android:textSize="36sp"
            android:id="@+id/textView"
            android:layout_marginBottom="23dp"
            android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center">
        <Button
                android:text="@string/take_a_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonNewPicture"
                android:onClick="onUpdateServerButtonClick"
                android:layout_marginBottom="23dp"
                android:textAllCaps="false" android:fontFamily="@font/montserrat"
                android:layout_gravity="center" android:gravity="center"/>
        <Button
                android:text="@string/matchs_pr_c_dents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonPreviousMatches"
                android:onClick="onUpdateServerButtonClick"
                android:layout_marginBottom="23dp"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat" android:layout_gravity="center"
                android:gravity="center"/>
        <Button
                android:text="@string/nouveau_match"
                android:layout_width="wrap_content"
                android:onClick="onUpdateServerButtonClick"
                android:layout_height="wrap_content" android:id="@+id/buttonNewMatch"
                android:layout_marginBottom="23dp"
                android:textAllCaps="false" android:fontFamily="@font/montserrat"
                android:layout_gravity="center" android:gravity="center"/>
    </LinearLayout>

</LinearLayout>