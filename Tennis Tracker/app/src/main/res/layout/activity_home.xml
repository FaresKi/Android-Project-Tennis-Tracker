<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.HomeActivity" android:orientation="vertical" android:background="#79DFEC">

    <ImageView
            android:src="@drawable/tennisball"
            android:layout_width="187dp"
            android:layout_height="160dp" android:id="@+id/imageView"
            android:contentDescription="@string/content"
            android:layout_marginBottom="9dp"
            android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tennis_n_tracker"
            android:fontFamily="@font/montserrat" android:textSize="36sp"
            android:id="@+id/textView"
            android:layout_marginBottom="34dp"
            android:layout_gravity="center"/>
    <Button
            android:text="@string/nouveau_match"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:layout_height="wrap_content" android:id="@+id/buttonNewMatch"
            android:foregroundGravity="center"
            android:layout_marginBottom="23dp"
            android:layout_gravity="center" android:textAllCaps="false" android:fontFamily="@font/montserrat"/>
    <Button
            android:text="@string/matchs_pr_c_dents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonPreviousMatches"
            android:foregroundGravity="center"
            android:onClick="onClick"
            android:layout_marginBottom="23dp"
            android:layout_gravity="center" android:gravity="center|center_vertical" android:textAllCaps="false"
            android:fontFamily="@font/montserrat"/>
    <Button
            android:text="@string/take_a_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNewPicture"
            android:onClick="onClick"
            android:layout_marginBottom="97dp"
            android:layout_gravity="center" android:textAllCaps="false" android:fontFamily="@font/montserrat"/>

</LinearLayout>