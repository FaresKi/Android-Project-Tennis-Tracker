<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.HomeActivity">

    <ImageView
            android:src="@drawable/tennisball"
            android:layout_width="228dp"
            android:layout_height="0dp" android:id="@+id/imageView"
            android:layout_marginBottom="137dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tennis_n_tracker"
            android:fontFamily="@font/montserrat" android:textSize="36sp"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="319dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/matchs_pr_c_dents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:layout_marginBottom="173dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            />
    <Button
            android:text="@string/nouveau_match"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>

</androidx.constraintlayout.widget.ConstraintLayout>