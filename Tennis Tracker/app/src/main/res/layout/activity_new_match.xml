<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.NewMatchActivity" android:orientation="vertical" android:weightSum="9">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="87dp" android:weightSum="2" android:id="@+id/linearLayout"
            android:baselineAligned="false"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:text="@string/nom_joueur_1"
                    android:layout_width="match_parent"
                    android:layout_height="29dp" android:id="@+id/textView3"
                    android:gravity="center_horizontal|center_vertical" android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="@string/firstPlayerName"
                    android:ems="10"
                    android:id="@+id/firstPlayerName" android:importantForAutofill="no"
                    android:gravity="center_horizontal|fill_vertical"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:text="@string/nom_joueur_2"
                    android:layout_width="match_parent"
                    android:layout_height="29dp" android:id="@+id/textView4"
                    android:gravity="center_horizontal|center_vertical" android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:text="@string/secondPlayerName"
                    android:ems="10"
                    android:id="@+id/secondPlayerName" android:importantForAutofill="no"
                    android:gravity="center_horizontal|fill_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="124dp">
        <TextView
                android:text="@string/format_du_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical" android:textStyle="bold"
                android:foregroundGravity="center_vertical|center|center_horizontal"/>
        <Spinner
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/matchFormat" android:layout_weight="1"
                android:entries="@array/matchFormat"
                android:gravity="center"
                android:layout_gravity="center" android:foregroundGravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="124dp">
        <TextView
                android:text="@string/format_du_dernier_set"
                android:layout_width="match_parent"
                android:layout_height="38dp" android:id="@+id/textView7" android:foregroundGravity="center"
                android:gravity="center_horizontal|center_vertical" android:textStyle="bold"/>
        <Spinner
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:id="@+id/spinner3" android:entries="@array/lastSetFormat"
                android:gravity="center" android:layout_gravity="center" android:foregroundGravity="center"/>
    </LinearLayout>
</LinearLayout>

