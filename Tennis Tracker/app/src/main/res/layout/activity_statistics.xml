<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#79DFEC">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Activities.StatisticsActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:orientation="vertical">

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#003F3E3E">

                    <TextView

                            android:id="@+id/tabFirstName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dip"
                            android:layout_span="1"
                            android:background="#003F3E3E"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/firstPlayerName"/>

                    <TextView
                            android:id="@+id/firstPlayerSet_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dip"
                            android:layout_span="1"
                            android:fontFamily="@font/montserrat"
                            android:text="-"/>

                    <TextView
                            android:id="@+id/firstPlayerSet_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="3"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dip"
                            android:fontFamily="@font/montserrat"
                            android:text="-"/>

                    <TextView
                            android:id="@+id/firstPlayerSet_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="4"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dip"
                            android:fontFamily="@font/montserrat"
                            android:text="-"/>

                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/tabSecondName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dip"
                            android:layout_span="1"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/secondPlayerName"/>

                    <TextView
                            android:id="@+id/secondPlayerSet_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dip"
                            android:fontFamily="@font/montserrat"
                            android:text="-" android:layout_column="2"/>

                    <TextView
                            android:id="@+id/secondPlayerSet_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dip"
                            android:fontFamily="@font/montserrat"
                            android:text="-"/>

                    <TextView
                            android:id="@+id/secondPlayerSet_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="4"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dip"
                            android:fontFamily="@font/montserrat"
                            android:text="-"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

            <ToggleButton
                    android:id="@+id/matchToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:text="Match"
                    android:textAllCaps="false"
                    android:textOff="Match"
                    android:textOn="Match" android:onClick="isChecked" android:checked="true"/>

            <ToggleButton
                    android:id="@+id/setOneToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:text="Set 1"
                    android:textAllCaps="false"
                    android:textOff="Set 1"
                    android:textOn="Set 1"
                    tools:text="Set 1" android:onClick="isChecked"/>

            <ToggleButton
                    android:id="@+id/setTwoToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:text="Set 2"
                    android:textAllCaps="false"
                    android:textOff="Set 2"
                    android:textOn="Set 2" android:onClick="isChecked"/>

            <ToggleButton
                    android:id="@+id/setThreeToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:fontFamily="@font/montserrat"
                    android:text="Set 3"
                    android:textAllCaps="false"
                    android:textOff="Set 3"
                    android:textOn="Set 3" android:onClick="isChecked"/>
        </LinearLayout>

        <LinearLayout
