            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/firstPlayerStats" android:layout_weight="1"
                    android:background="#03A9F4" android:fontFamily="@font/montserrat" android:gravity="center"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/secondPlayerStats" android:layout_weight="1"
                    android:background="#03A9F4" android:fontFamily="@font/montserrat" android:gravity="center"/>
