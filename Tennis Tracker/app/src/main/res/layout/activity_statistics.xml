<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activities.StatisticsActivity" android:orientation="vertical">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="205dp">
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:weightSum="2">

                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:background="#003F3E3E"
                          android:layout_weight="1">
                    <TextView

                            android:text="@string/firstPlayerName"
                            android:layout_column="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tabFirstName"
                            android:fontFamily="@font/montserrat" android:layout_gravity="center_vertical"
                            android:layout_span="1" android:layout_margin="10dip" android:background="#003F3E3E"/>
                    <TextView
                            android:text="@string/firstPlayerScore"
                            android:layout_column="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/tabFirstPlayerScore"
                            android:layout_gravity="center_vertical" android:layout_span="1"
                            android:layout_margin="10dip" android:fontFamily="@font/montserrat"/>
                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/firstPlayerSet_1"
                            android:layout_margin="10dip"
                            android:layout_gravity="center_vertical" android:layout_column="2" android:layout_span="1"
                            android:fontFamily="@font/montserrat"/>
                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/firstPlayerSet_2"
                            android:layout_gravity="center_vertical" android:layout_column="3"
                            android:layout_margin="10dip" android:fontFamily="@font/montserrat"/>
                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/firstPlayerSet_3"
                            android:layout_gravity="center_vertical" android:layout_column="4"
                            android:layout_margin="10dip" android:fontFamily="@font/montserrat"/>

                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1">

                    <TextView
                            android:text="@string/secondPlayerName"
                            android:layout_column="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tabSecondName"
                            android:fontFamily="@font/montserrat" android:layout_gravity="center_vertical"
                            android:layout_span="1" android:layout_margin="10dip"/>
                    <TextView
                            android:text="@string/secondplayerscore"
                            android:layout_column="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tabSecondPlayerScore"
                            android:layout_gravity="center_vertical" android:layout_span="1"
                            android:layout_margin="10dip" android:fontFamily="@font/montserrat"/>
                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/secondPlayerSet_1"
                            android:layout_margin="10dip"
                            android:layout_gravity="center_vertical" android:fontFamily="@font/montserrat"/>
                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/secondPlayerSet_2"
                            android:layout_gravity="center_vertical" android:layout_margin="10dip"
                            android:fontFamily="@font/montserrat"/>
                    <TextView
                            android:text="-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/secondPlayerSet_3"
                            android:layout_gravity="center_vertical" android:layout_column="4"
                            android:layout_margin="10dip" android:fontFamily="@font/montserrat"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">
            <ToggleButton
                    android:text="Match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/toggleButton" android:layout_weight="1"
                    android:textOff="Match" android:textOn="Match" android:textAllCaps="false"
                    android:fontFamily="@font/montserrat"/>
            <ToggleButton
                    android:text="Set 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/toggleButton2" android:layout_weight="1"
                    tools:text="Set 1" android:textOff="Set 1" android:textOn="Set 1" android:textAllCaps="false"
                    android:fontFamily="@font/montserrat"/>
            <ToggleButton
                    android:text="Set 2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/toggleButton3" android:layout_weight="1"
                    android:textOff="Set 2" android:textOn="Set 2" android:textAllCaps="false"
                    android:fontFamily="@font/montserrat"/>
            <ToggleButton
                    android:text="Set 3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/toggleButton4" android:layout_weight="1"
                    android:textOff="Set 3" android:textOn="Set 3" android:textAllCaps="false" android:enabled="false"
                    android:fontFamily="@font/montserrat"/>
        </LinearLayout>
        <LinearLayout
